{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "outDir": "./dist",  // Ensure the compiled files are going into dist folder
    "rootDir": "./src",  // Ensure your source files are in the src directory
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],  // This includes all TypeScript files in src
  "exclude": ["node_modules"]
}